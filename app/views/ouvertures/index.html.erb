<div class="pb-2 mt-6 mb-2 border-b">
  <h3>
    <%= fa_icon 'business-time' %>
    Horaires d'ouverture
  </h3>
</div>

<div class="overflow-x-auto">
  <table class="table table-sm table-zebra table-bordered">
    <thead>
      <tr>
        <th>Bloc</th>
        <th>Jour</th>
        <th>Début</th>
        <th>Fin</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ouvertures.each do |ouverture| %>
        <tr class="hover">
          <td><b><%= ouverture.bloc %></b></td>
          <td><%= ouverture.jour.humanize %></td>
          <td><%= ouverture.début.strftime("%Hh%M") %></td>
          <td><%= ouverture.fin.strftime("%Hh%M") %></td>
          <td>
            <%= link_to edit_ouverture_path(ouverture), class: 'btn btn-ghost' do %>
              <%= fa_icon 'edit' %>
            <% end %>
            <%= link_to(ouverture, 'data-turbo-method': :delete, 'data-turbo-confirm': 'Confirmez-vous ?', class: 'btn btn-ghost') do %>
              <%= fa_icon 'trash' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'Nouvelle Ouverture', new_ouverture_path %>
