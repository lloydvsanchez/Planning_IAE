<tr class='shadow-sm'>
    <td><b><%= link_to etudiant.nom, etudiant %></b></td>
    <td><%= etudiant.prénom %></td>
    <td>
        <% if etudiant.formation_id %>
            <% formation = Formation.unscoped.find(etudiant.formation_id) %>
            <%= link_to formation.nom, formation %>
        <% end %>
    </td>
    <td>
        <%= etudiant.email %>
        <% unless etudiant.linked_user %>
            <%= link_to users_path(search: etudiant.nom, role: 0) do %>
                <%= fa_icon 'question-circle', class: 'text-danger' , title: 'L\'étudiant n\'a pas de compte de connexion (utilisateur) associé à cet email' %>
            <% end %>
        <% end %>
    </td>
    <td>
        <%= time_ago_in_words etudiant.updated_at %>
    </td>
    <td>
        <% if policy(Etudiant).edit? %>
            <%= link_to edit_etudiant_path(etudiant), class:"btn btn-default" do %>
                <%= fa_icon 'edit '%>
            <% end %>
        <% end %>
        <% if policy(Etudiant).destroy? %>
            <%= link_to(etudiant, method: :delete, data: {confirm: 'Confirmez-vous ?'}, class: 'btn btn-default') do %>
                <%= fa_icon 'trash' %>
            <% end %>
        <% end %>
    </td>
</tr>
