<%= form_for(@etudiant) do |f| %>
  <% if @etudiant.errors.any? %>
    <div class="alert alert-error" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="text-xl"><%= pluralize(@etudiant.errors.count, "erreur empêche", plural: 'erreurs empêchent') %> d'enregistrer cet étudiant :</h4>

      <ul>
      <% @etudiant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-wrap mt-12">
    <div class="sm:w-1/2 px-4">
      <div class="form-control">
        <%= f.label :civilité, "Civilité *" %>
        <%= f.text_field :civilité, required: true, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :nom, "Nom *" %>
        <%= f.text_field :nom, required: true, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :prénom, "Prénom *" %>
        <%= f.text_field :prénom, required: true, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :email, "Email *" %>
        <%= f.email_field :email, required: true, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :mobile, "Mobile" %>
        <%= f.text_field :mobile, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="field mb-6">
        <%= check_box_tag :notify %>
        <%= label_tag :notify, "Créer un compte d'accès et en informer l'étudiant ?", class: 'font-bold' %>
      </div>

      <%= f.submit class: "btn btn-primary text-white" %>

    </div>

    <div class="sm:w-1/2 px-4">
      <div class="form-control">
        <%= f.label :formation_id, "Formation" %>
        <%= f.collection_select(:formation_id, Formation.unscoped.all, :id, :nom, {include_blank: true}, class:"slim-select") %>
      </div>

      <div class="form-control">
        <%= f.label :workflow_state, "Statut" %>
        <%= f.select :workflow_state, Etudiant.workflow_spec.states.keys.to_a, {include_blank: true}, class: 'select select-bordered select-sm w-full' %>
      </div>
    </div>
  </div>
<% end %>
<br>

<%= render 'partials/slim_select' %>