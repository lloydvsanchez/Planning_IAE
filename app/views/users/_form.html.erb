<%= form_for(@user) do |f| %>
  <div class="flex flex-wrap">
    <div class="sm:w-1/3 px-4">
      <div class="form-control">
        <%= f.label :nom %>
        <%= f.text_field :nom, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :prénom %>
        <%= f.text_field :prénom, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :mobile %>
        <%= f.text_field :mobile, class: 'input input-bordered input-sm w-full' %>
      </div>

      <div class="form-control">
        <%= f.label :role, "Rôle" %>
        <%= f.select :role, options_for_select(User.roles.keys, @user.role), {}, class: 'select select-bordered select-sm w-full' %>
      </div>

      <% if @user.new_record? %>
        <div class="form-control">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'input input-bordered input-sm w-full' %>
        </div>

        <div class="form-control">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'input input-bordered input-sm w-full' %>
        </div>
      <% end %>
      
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
