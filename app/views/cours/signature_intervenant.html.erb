<h1 class="text-4xl text-base-content">Session</h1>

<%= render partial: 'ma_session', locals: {cour: @cour} %>

<h2 class="text-3xl text-base-content">Signature pr√©sence</h2>
<h4 class="text-xl text-base-content"><%= @presence.intervenant.nom_prenom %></h4>

<%= form_with(model: @presence, url: signature_intervenant_do_cours_path(presence_slug: params[:presence_slug])) do |form| %>

  <%= form.hidden_field :id %>
  <%= form.text_field :signature, style: 'display: none' %>
  
  <div id="signature">
    <div class="wrapper">
      <canvas id="signature-pad" class="signature-pad" style="border: 1px #ccc solid;" width=350 height=300></canvas>
    </div>

    <div style="margin-top: 8px;">
      <button id="save" class="btn btn-success text-white mr-4">Enregistrer</button>
      <a id="clear">Effacer</a>
    </div>
  </div>
<% end %>

<p class="my-6"><%= link_to 'Retour', mes_sessions_intervenant_path(presence_slug: @presence.slug), class: 'text-primary hover:underline' %></p>

<%= render 'signature_pad' %>