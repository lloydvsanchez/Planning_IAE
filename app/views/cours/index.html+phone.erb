<% if @alert %>
  <%= content_tag :div, 
      class: "alert mt-4 alert-#{@alert.etat}",
      role: "alert" do %>
    <button type="button" class="close" data-dismiss="alert" aria-label="bouton du menu">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= @alert.message %>
  <% end %>
<% end %>

<%= form_tag request.path, method: :get do %>

  <%= label_tag :start_date, "Cours à partir du" %>
  <%= text_field_tag :start_date, params[:start_date], type: 'date', onchange: 'this.form.submit()', class: "input input-bordered input-sm w-full", id: 'Cours___partir_du' %>
  
  <%= label_tag :formation %>    
  <%= select_tag :formation, options_for_select(@formations, params[:formation]), 
                  class: "slim-select",
                  include_blank: true, onchange: 'this.form.submit()' %>

  <% if user_signed_in? %>
    <%= label_tag :intervenant %>
    <%= select_tag :intervenant, grouped_options_for_select(Intervenant.for_select, params[:intervenant]), 
                      class: "slim-select",
                      include_blank: true,
                      onchange:'this.form.submit()' %>
  <% end %>

  <%= button_tag name: 'commit', value: 'Filtrer', class: "btn btn-success btn-sm mt-4" do %>
    <i class="fas fa-filter"></i> 
    Filtrer
  <% end %>
  <% if params.values.count(nil) < 5 %>
    <%= button_tag name: 'commit', value: 'RàZ', class: "btn btn-light btn-sm" do %>
      <i class="fas fa-times"></i> 
      Voir tous
    <% end %>
  <% end %>
<% end %>

<% current_date = '' %>
<% @cours.each do | cours | %>
  <% _date_cours = cours.debut.to_date %>
  <% if _date_cours != current_date %>
    <div class="shadow-sm bg-base-200 mt-4 py-2">
      <%= fa_icon 'calendar-day' %>
      <b><%= l(_date_cours, format: :long).humanize %></b>
    </div>
    <% current_date = _date_cours %>
  <% end %>  

  <%= render partial: 'cours', locals: { cours: cours } %>

<% end %>
<br>

<% if @cours.length > 0 %>
  <div class="page_info m-6">
    <%= page_entries_info @cours %>
  </div>
  
  <div class="planning_pagination w-full justify-center">
    <%= will_paginate @cours, inner_window: 0, 
                              outer_window: 0, 
                              class: 'pagination' %>
  </div>
<% else %>
  <p>
    Aucun cours à afficher...
  </p>
<% end %>
<br>

<%= render 'partials/slim_select' %>