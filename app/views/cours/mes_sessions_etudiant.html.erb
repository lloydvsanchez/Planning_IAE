<% if @cours.any?%>
  <div class="sm:flex sm:flex-wrap w-full gap-6">
    <% @cours.each do |cour| %>
      <%= render partial: 'ma_session', locals: {cour: cour} %>
    <% end %>
  </div>
<% else %>
  <div class="chat chat-start my-4">
    <div class="chat-bubble chat-bubble-primary text-white">
      <b>Aucun cours aujourd'hui !</b>
      <br>
      Vous n'avez pas de cours planifiÃ©s pour aujourd'hui.
    </div>
  </div>
<% end %>

