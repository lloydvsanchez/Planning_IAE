<h4 class="text-xl text-base-content my-6"><%= fa_icon 'calendar-day' %> <%= l(Date.today, format: :long).humanize %></h4>

<% if @cours.any?%>
  <% @cours.each do |cour| %>
    <%= render partial: 'ma_session_intervenant', locals: {cour: cour} %>
  <% end %>
<% else %>
  <div class="chat chat-start my-4">
    <div class="chat-bubble chat-bubble-primary text-white">
      <b>Aucun cours aujourd'hui !</b>
      <br>
      Vous n'avez pas de cours planifiÃ©s pour aujourd'hui.
    </div>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Voir mes prochains cours...', cours_path(start_date: Date.tomorrow, intervenant_id: @intervenant.id, intervenant: @intervenant.nom + " " + @intervenant.prenom), class: 'text-primary hover:underline' %>
<% end %>