<tr class="hover">
  <td><%= time_ago_in_words commande.debut %></td>
  <td><b><%= link_to l(commande.debut, format: :short), commande, class: 'text-primary hover:underline' %></b></td>
  <td><%= commande.formation.nom %></td>
  <td><%= commande.intervenant.nom %></td>
  <td>
    <% if commande.salle %>
      <h5 class="text-lg mb-2">
        <span class="badge badge-<%= commande.style %> text-white font-bold">
          <%= commande.salle.nom %>
        </span>
      </h5>
    <% end %>
  </td>
  <td class="text-lg">
    <% commande.commentaires.split('+').each do |item| %>
      <%= item.humanize %>
      <br>
    <% end %>
  </td>
</tr>