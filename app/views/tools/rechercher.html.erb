<div class="pb-2 mt-6 mb-2 border-b">
  <h3><%= fa_icon 'search-plus' %> Chercher</h3>
</div>

<div class="bs-container mx-auto sm:px-4 max-w-full p-4 shadow">
  <%= form_tag tools_rechercher_path, method: :get do %>
    <div class="flex flex-wrap mb-4 px-4">
      <%= label_tag :nom, "Entrez un terme à rechercher dans toute l'application" %>
      <div class="join w-full">
        <%= text_field_tag :search, params[:search], include_blank:true, onchange:'this.form.submit()', class:"input input-bordered input-sm w-full join-item" %>
        <%= button_tag name: 'commit', value: 'Go', class: "btn btn-sm btn-success text-white join-item" do %>
          <%= fa_icon 'search-plus' %>
        <% end %>
      </div>
    </div>

    <div class="flex flex-wrap px-4">
      <div class="relative flex-grow max-w-full flex-1">
        <span>
          Inclure :
        </span>
        <%= check_box_tag :search_cours, '1', params[:search_cours] == '1' %>
        <%= label_tag :search_cours, "Cours" %>
      </div>
      <div class="relative flex-grow max-w-full flex-1">
        <%= check_box_tag :search_formations, '1', params[:search_formations] == '1' %>
        <%= label_tag :search_formations, "Formations" %>
      </div>
      <div class="relative flex-grow max-w-full flex-1">
        <%= check_box_tag :search_intervenants, '1', params[:search_intervenants] == '1' %>
        <%= label_tag :search_intervenants, "Intervenants" %>
      </div>
      <div class="relative flex-grow max-w-full flex-1">
        <%= check_box_tag :search_etudiants, '1', params[:search_etudiants] == '1' %>
        <%= label_tag :search_etudiants, "Étudiants" %>
      </div>
      <div class="relative flex-grow max-w-full flex-1">
        <%= check_box_tag :search_users, '1', params[:search_users] == '1' %>
        <%= label_tag :search_users, "Utilisateurs" %>
      </div>
      <div class="w-1/6">
        <%= check_box_tag :search_ue, '1', params[:search_ue] == '1' %>
        <%= label_tag :search_ue, "U.E." %>
      </div>
    </div>
  <% end %>
</div>

<% if defined?(@results) %>
  <% if @results.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Type</th>
          <th>Contenu</th>
          <th>Voir</th>
          <th>MÀJ</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: @results, as: :result %>
      </tbody>
      <tfoot>
        <tr><th colspan=4></th></tr>
      </tfoot>
    </table>
    <div class="page_info">
      <%= page_entries_info @results %>
    </div>
    <div class="planning_pagination">
      <%= will_paginate @results %>
    </div>
    <br>
  <% else %>
    <p class="title is-4 has-text-centered p-6">
      Aucun résultat trouvé...
    </p>
  <% end %>
<% end %>