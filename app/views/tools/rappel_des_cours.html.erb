<div class="pb-2 mt-6 mb-2 border-b">
  <h3><%= fa_icon 'bell' %> Rappel des cours</h3>
</div>
<br>

<%= form_tag({action: "rappel_des_cours_do", method: :post}, multipart: true) do %>
  <div>
    <h4>
      Ajouter un rappel des cours dans la file d'attente.
      <br>
      <small> Pour tous les intervenants d'une formation ou un seul intervenant, sur une période choisie</small>
    </h4>
    <br>
  </div>
  
  <div class="flex flex-wrap">
    <div class="sm:w-1/3 px-4">
      <%= label_tag "Formation" %>
      <%= select_tag :formation_id, 
            options_from_collection_for_select(@formations, :id, :nom, params[:formation_id]), 
              class:"input input-bordered w-full select2", include_blank: true %>

      <div class="mt-6">
        <%= label_tag "Intervenant" %>
        <%= select_tag :intervenant_id, 
              options_from_collection_for_select(@intervenants, :id, :nom_prenom, params[:intervenant_id]), 
                class:"input input-bordered w-full select2", include_blank: true %>
      </div>

      <div class="flex justify-between mt-6">
        <div>
          <%= label_tag :du, "Période du" %>
          <%= text_field_tag :du, params[:du], type: 'date', class: 'input input-bordered w-full' %>
        </div>
        <div>
          <%= label_tag :au %>
          <%= text_field_tag :au, params[:au], type: 'date', class: 'input input-bordered w-full' %>
        </div>
      </div>
      <small>Laissez vide pour le rappel des cours du mois suivant</small>
    </div>
  </div>
  
  <div class="flex items-center mt-6" style="gap: 1rem">
    <%= submit_tag "Ajouter à la file d'attente", class: "btn btn-success" %>
    <%= link_to "Voir la file d'attente", envoi_logs_path %>
  </div>
<% end %>