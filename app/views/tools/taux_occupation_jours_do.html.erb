<div class="page-header">
  <h1 class="text-4xl">
  	Taux d'occupation jours
    du <%= l(@start_date.to_date) %> au <%= l(@end_date.to_date) %>
  </h1>
</div>

<div class="overflow-x-auto">
  <table class="table table-zebra">
    <thead>
      <th>Date</th>
      <th>Taux journée</th>
      <th>Taux soirée</th>
    </thead>
    <tfoot>
      <th /><th /><th />
    </tfoot>
    <tbody>
      <% @results.each do |r| %>
        <tr class="hover">
          <td><%= r[0] %></td>
          <td><%= r[1] %>%</td>
          <td><%= r[2] %>%</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h4 class="text-xl">
  Nombre de jours: <%= @nbr_jours %> |
  Moyenne journée: <%= (@total_jour / @nbr_jours).to_i %>% |
  Moyenne soirée:  <%= (@total_soir / @nbr_jours).to_i %>%
</h4>  
<br>
