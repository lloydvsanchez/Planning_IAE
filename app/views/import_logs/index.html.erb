<div class="border-b mt-6 mb-2 pb-4">
  <h3 class="text-2xl"><%= fa_icon 'inbox' %> Import logs</h3>
</div>
<br>

<div class="overflow-x-auto">
  <table class="table">
    <thead class="bg-base-200 border">
      <tr>
        <th></th>
        <th>Le</th>
        <th>Type</th>
        <th>Par</th>
        <th>Etat</th>
        <th>Message</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @import_logs.each do |import_log| %>
        <tr class="hover border">
          <td><%= fa_icon import_log.icon_etat, class: import_log.icon_color %></td>
          <td><%= l(import_log.created_at.in_time_zone('Paris'), format: :short) %></td>
          <td><%= import_log.model_type %></td>
          <td><%= import_log.user.username if import_log.user %></td>
          <td><%= import_log.etat.humanize %></td>
          <td><%= import_log.message %></td>
          <td>
            <%= link_to import_log, class: "btn btn-primary btn-outline" do %>
              <%= fa_icon 'eye' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td colspan="7"></td>
      </tr>
    </tfoot>
  </table>
</div>

<div class="page_info">
  <%= page_entries_info @import_logs %>
</div>

<div class="planning_pagination">
  <%= will_paginate @import_logs %>
</div>