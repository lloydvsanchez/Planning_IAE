<br>

<p class="h3 mb-4">
  <%= fa_icon 'folder' %>
  Dossier de candidature 
</p>
<br>

<div class="flex flex-wrap shadow-lg p-12">
  <div class="sm:w-1/3 px-4">
    <p class="mb-4">
      <strong>Intervenant:</strong>
      <%= @dossier.intervenant.nom_prenom %>
    </p>

    <p class="mb-4">
      <strong>Email:</strong>
      <%= @dossier.intervenant.email %>
    </p>

    <p class="mb-4">
      <strong>Période:</strong>
      <%= @dossier.période %>
    </p>

    <% if @dossier.validé? || @dossier.non_conforme? %>
      <p class="mb-4">
        <strong>Etat:</strong> 
        <span class="badge <%= @dossier.style %> text-white">
          <%= @dossier.workflow_state.humanize %>
        </span>
      </p>
    <% end %>

    <% unless @dossier.mémo.blank? %>
      <p class="mb-4">
        <p class="alert alert-warning mb-4">
          <strong>Informations :</strong>
          <%= @dossier.mémo %>
        </p>
      </p>
    <% end %>

  </div>

  <div class="relative flex-grow max-w-full flex-1">
    <h5 class="text-lg">Pièces justificatives</h5>

    <% if @dossier.documents.any? %>
      <div class="overflow-x-auto">
        <table class="table table-sm shadow">
          <thead>
            <th>Type</th>
            <th>Fichier</th>
            <th>Etat</th>
            <th>MàJ il y a</th>
            <th></th>
          </thead>
          <tbody>
            <% @dossier.documents.each do | doc | %>
              <tr class="hover">
                <td><%= doc.nom %></td>
                <td>
                  <% if doc.fichier.attached? %>
                  <%= link_to doc.fichier.filename, url_for(doc.fichier), target: '_blank' %>
                  <% end %>
                </td>
                <td>
                  <span class="badge <%= doc.style %> text-white">
                    <%= doc.workflow_state.humanize %>
                  </span>
                  <% if doc.non_conforme? %>
                    <br>
                    <b><%= "Motif: #{ doc.commentaire }" %></b>
                  <% end %>
                </td>
                <td><%= time_ago_in_words(doc.created_at) %></td>
                <td><%= link_to_if @dossier.can_déposer?, '[X]', doc, 'data-turbo-method': :delete, 'data-turbo-confirm': 'Confirmez-vous ?' %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr><th colspan=5></th></tr>
          </tfoot>
        </table>
      </div>
    <% else %>
      <% if current_user %>
        <p class="mb-4">
          Aucun document pour l'instant.
        </p>
      <% else %>
        <p class="alert alert-warning mb-4">
          <br>
          Veuillez ajouter les justificatifs correspondants à votre situation 
          (voir le document 'Pièces à fournir.pdf') en utilisant le bouton
          <%= link_to new_document_path(dossier_id: @dossier.id), data: { toggle: "modal", target: "#myModal" }, class: 'btn btn-link' do %>
            <%= fa_icon 'plus-circle' %> Ajouter un document
          <% end %>
          <br>

          Quand le dossier est complet et prêt à être déposé, cliquez sur 'Déposer le dossier'.
          <br><br>
        </p>
      <% end %>
    <% end %>

    <%= link_to new_document_path(dossier_id: @dossier.id), data: { toggle: "modal", target: "#myModal" }, class: 'btn btn-link' do %>
      <%= fa_icon 'plus-circle' %> Ajouter un document
    <% end %>

  </div>
</div>

<% if current_user %>
  <br>
  <%= link_to 'Modifier', edit_dossier_path(@dossier), class: 'link' %> |
  <%= link_to_if @dossier.can_envoyer?, 'Envoyer', envoyer_dossier_path(@dossier), title: "Envoyer un mail à l'intervenant contenant un lien unique vers son dossier", class: 'btn btn-sm btn-primary text-white' %> |
  <%= link_to_if @dossier.can_valider?, 'Valider', valider_dossier_path(@dossier), class: 'btn btn-sm btn-success text-white' %> |
  <%= link_to_if @dossier.can_rejeter?, 'Rejeter', rejeter_dossier_path(@dossier), class: 'btn btn-sm btn-error text-white' %> |
  <%= link_to_if @dossier.can_relancer?, 'Relancer', relancer_dossier_path(@dossier), class: 'btn btn-sm btn-info text-white' %> |
  <%= link_to_if @dossier.can_archiver?, 'Archiver', archiver_dossier_path(@dossier), class: 'btn btn-sm btn-secondary text-white' %> |
  <%= link_to 'Retour', dossiers_path, class: 'link' %>
  <br>
<% else %>
  <% if @dossier.can_déposer? %>
    <br>
    <%= link_to deposer_dossier_path(dossier_id: @dossier.id), data: { confirm: 'Etes-vous bien certain.e de vouloir déposer ce dossier ?' }, class: "btn btn-success text-white #{ 'disabled' unless @dossier.documents.any? }" do %>
      <%= fa_icon 'arrow-circle-up' %> Déposer le dossier
    <% end %>

    <br><br>
  <% end %>

<% end %>
<br>


<% if policy(@dossier).audits? %>
  <br>
  <h5 class="text-lg">Audit des modifications</h5>

  <div class="overflow-x-auto">
    <table class="table table-xs table-zebra table-bordered">
      <thead>
        <th>Date</th>
        <th>Utilisateur</th>            
        <th>Type</th>
        <th>Id</th>
        <th>Action</th>
        <th>Modifications</th>
      </thead>
      <%= render partial: 'tools/audit', collection: @dossier.own_and_associated_audits %>
    </table>
  </div>
  <br>
<% end %>

<!-- Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="text-xl modal-title">Ajout d'un document</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <%= render 'documents/modal_form', document: Document.new(dossier_id: @dossier.id) %>
      </div>
    </div>
  </div>
</div>

