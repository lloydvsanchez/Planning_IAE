<%= form_for(@salle) do |f| %>
  <% if @salle.errors.any? %>
    <div class="alert alert-error" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  
      <h3><%= t('activerecord.errors.template.header',
                  model: Salle.model_name.human, count: @salle.errors.count) %></h3>
      <ul>
      <% @salle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="sm:w-1/4 px-4">
    <div class="form-control">
      <%= f.label :nom %>
      <%= f.text_field :nom, class: 'input input-bordered input-sm w-full' %>
    </div>

    <div class="form-control">
      <%= f.label :bloc %>
      <%= f.text_field :bloc, class: 'input input-bordered input-sm w-full' %>
    </div>
    
    <div class="form-control">
      <%= f.label :places, 'Nombre de places' %>
      <%= f.number_field :places, class: 'input input-bordered input-sm w-full' %>
      <div class="label">
        <span class="label-text-alt">Entrez 0 pour autoriser les doublons</span>
      </div>
    </div>

    <%= f.submit class: "btn btn-primary" %>
  </div>  
<% end %>
