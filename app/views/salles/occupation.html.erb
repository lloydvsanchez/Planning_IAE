<div class="pb-2 mt-6 mb-2 border-b">
  <h3><%= fa_icon 'chalkboard' %> Occupation des salles</h3>
</div>

<div class="bs-container mx-auto sm:px-4 max-w-full p-4 shadow-sm">

  <%= form_tag request.path, method: :get do %>
    <div class="flex flex-wrap gap-4">

      <div class="w-full sm:w-1/4">
        <%= label_tag "Date" %>    
        <%= text_field_tag :start_date, params[:start_date], type:'date', onchange:'this.form.submit()', class:"input input-bordered w-full input-sm" %>
      </div>

      <div class="w-full sm:w-1/5">
        <%= label_tag "Batiment" %>
        <%= select_tag :bloc, 
                    options_for_select(Salle.blocs, params[:bloc]), 
                    include_blank:true, onchange:'this.form.submit()', class:"select select-bordered w-full select-sm" %>
      </div>

      <div class="w-full sm:w-1/5">
        <%= label_tag "Salle" %>
        <%= select_tag :salle_id, 
                    options_from_collection_for_select((params[:bloc].blank? ? Salle.all : Salle.where(bloc: params[:bloc])), :id, :nom, params[:salle_id]), 
                    include_blank:true, onchange:'this.form.submit()', class:"select select-bordered w-full select-sm" %>
      </div>

      <div class="w-full sm:w-1/4">
        <%= label_tag "Vue" %>
        <br> 
        <%= radio_button_tag :vue, "jour", (params[:vue]=='jour'), onchange:'this.form.submit()' %>
        Journ√©e 
        <%= radio_button_tag :vue, "week", (params[:vue]=='week'), onchange:'this.form.submit()' %>
        Semaine
      </div>

    </div>
  <% end %>
</div>
<br>

<%= render partial: "occupation_#{ params[:vue] }" %>
