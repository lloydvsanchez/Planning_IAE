<div class="pb-2 mt-6 mb-2 border-b">
  <%= link_to new_salle_path, class: 'btn text-primary float-right' do %>
    <%= fa_icon 'plus-circle' %> Ajouter
  <% end %>
  <h3><%= fa_icon 'chalkboard' %> Liste des salles</h3>
</div>

<div class='bs-container mx-auto sm:px-4 max-w-full'>
    <%= form_tag request.path, method: :get do %>
      <div class="form-group">
        <div class="flex flex-wrap">
          <div class="sm:w-1/5 px-4">
            <%= label_tag "Salle" %>    
              <%= select_tag :salle_id, 
                      options_from_collection_for_select(Salle.order(:nom), :id, :nom, params[:salle_id]), 
                        include_blank:true, onchange:'this.form.submit()', class:"input input-bordered w-full" %>
          </div>
        </div>
      </div>  
    <% end %>
</div>

<div class="overflow-x-auto">
  <table class="table table-zebra table-sm">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Nbr places</th>
        <th>Bloc</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tfoot>
      <tr>
        <th /><th /><th /><th />
      </tr>
    </tfoot>

    <tbody>
        <%= render @salles %>
    </tbody>
  </table>
</div>
<br>

