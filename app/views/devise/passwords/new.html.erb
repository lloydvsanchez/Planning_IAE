<div class="flex flex-col vh-100 justify-center items-center">
  <%= image_tag "logo@2000.png", style: "width: 100%; max-width: 500px;" %>
  <div class="border border-gray-900 rounded shadow w-100 p-12" style="max-width: 500px">
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <h1 class="text-center border-b mb-4 pb-4">
        <%= t('.forgot_your_password') %>
      </h1>
      <div class="form-group">
        <div class="flex flex-wrap">
          <div class="relative flex-grow max-w-full flex-1 px-4">
            <%= f.email_field :email, autofocus: true  %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Envoyez-moi les instructions", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>